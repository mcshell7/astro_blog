---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import {SITE_TITLE, SITE_DESCRIPTION} from '../consts';
import Work from "../components/Work/Work.astro";
import Hero from "../components/Hero/Hero.astro";
import Button from "../components/Button/Button.astro";
---


<!doctype html>
<html lang="en">
<head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION}/>
</head>
<body>
<Header/>
<main>
    <section class="welcome">
        <div class="container container-md">
            <div class="welcome__inner">
                <h1>Michael Khamardiuk</h1>
                <h2>I'm a Front-End Web Developer, creating awesome and responsive websites in
                    <mark>Charlotte, NC</mark>
                </h2>
                <Button href="#" class="button-lg" variant="primary">Resume</Button>
            </div>
            <!--<img src="public/bg.png">-->
        </div>
    </section>
    <section id="about" class="about section-bg">
        <div class="container">

            <div class="about__inner">

                <div class="about__content">
                    <h2 class="about__title h2">
                        Who am I?
                    </h2>
                    <p>
                        A 24 year old self-taught front-end web developer
                    </p>
                    <p>
                        Iâ€™m highly motivated and have a true passion for this industry. Ever since I produced "Hello World" in the console of my first application I knew I was hooked into the world of software development.
                    </p>
                    <p>
                        I care deeply about perfecting my craft on a daily basis and I'm always striving to be a better developer than I was the day before.
                    </p>
                </div>
                <div class="about__img">
                    <img src="/public/images/about-test.jpeg" alt="">
                </div>
            </div>
        </div>
    </section>
    <Work/>
    <section class="tech">
        <div class="container">
            <h2>Skills</h2>
            <div class="tech__list">
                <div class="tech__item">
                    <img src="/svg/css3.svg">
                    <p>CSS</p>
                </div>
                <div class="tech__item">
                    <img src="/svg/html5.svg">
                    <p>HTML</p>
                </div>
                <div class="tech__item">
                    <img src="/svg/js.svg">
                    <p>JS</p>
                </div>

                <div class="tech__item">
                    <img src="/svg/sass.svg">
                    <p>SCSS</p>
                </div>
                <div class="tech__item">
                    <img src="/svg/reactjs.svg">
                    <p>React Js</p>
                </div>
                <div class="tech__item">
                    <img src="svg/nextjs2.svg">
                    <p>Next Js</p>
                </div>
                <div class="tech__item">
                    <img src="svg/astro.svg">
                    <p>Astro Js</p>
                </div>
                <div class="tech__item">
                    <img src="svg/nodejs.svg">
                    <p>Node Js</p>
                </div>
                <div class="tech__item">
                    <img src="svg/jekyll.svg">
                    <p>Jekyll</p>
                </div>
                <div class="tech__item">
                    <img src="/svg/wordpress.svg">
                    <p>Wordpress</p>
                </div>
            </div>

        </div>
    </section>
</main>
<Footer/>
</body>
</html>
